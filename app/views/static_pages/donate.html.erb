<% provide(:title, "Donate") %>
<h1>Donate</h1>
<p>
 
  <%= form_with(model: @user) do |f| %>
      <%= f.label "How Much You Would Like To Donate" %>
      <%= f.text_field :amount %>
      
      <%= f.submit "Donate", class: "btn btn-primary" %> 
      <%= hidden_field_tag :button_clicked, true %>
    <% end %>
</p>