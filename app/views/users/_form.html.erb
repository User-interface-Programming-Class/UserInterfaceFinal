<%= form_with(model: @user) do |f| %>
  <%= render 'shared/error_messages', object: @user %>

  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label :email %>
  <%= f.email_field :email, class: 'form-control' %>

  <%= f.label :password %>
  <%= f.password_field :password, class: 'form-control' %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation, class: 'form-control' %>

  <%= f.label :emergencyPhoneNumber, "Emergency Phone Number" %>
  <%= f.text_field :emergencyPhoneNumber, class: 'form-control' %>

  <%= f.label :age %>
  <%= f.text_field :age, class: 'form-control' %>


  <%= f.label :teamName, "Team Name" %>
  <%= f.text_field :teamName, class: 'form-control' %>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
<% end %>