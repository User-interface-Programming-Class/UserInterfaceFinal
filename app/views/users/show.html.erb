<% provide(:title, @user.name) %>
 
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <% if @user.admin? %>
          <%= gravatar_for @user %>
          Hello Admin
          <%= @user.name %>,
          <%= @user.teamName %>
        <% else %>
          <%= gravatar_for @user %>
          Hello
          <%= @user.name %>,
          <%= @user.teamName%>
        <% end %>
      </h1>
      <body>
      <table class="table" style="max-width:15rem;">
        <thead class="thead-dark">
          <th>Time </th>
          <th>Activity</th>
        </thead>
        <tbody>
        <tr>
          <td>11am </td>
          <td>Race Starts</td>
        </tr>
        <tr>
          <td>1pm</td>
          <td>Lunch</td>
        </tr>
        <tr>
          <td>5pm</td>
          <td>Race Ends</td>
        </tr>
        </tbody>
      </body>
      <%= link_to image_tag("5k map.png", alt: "Running", width: "300") %>
    </section>
    <li><%= link_to "Users", users_path %></li>
  </aside>
</div>